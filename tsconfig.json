{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
